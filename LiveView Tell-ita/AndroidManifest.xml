<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makingiants.tellit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- Required permissions for all ads. This will apply for all ads. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Additional required permission for push notification. Apply only for push notification ad. -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Strongly recommended permission to enhancing your revenue stream -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:description="@string/application_description"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >

        <!-- LiveView properties -->

        <service
            android:name="com.makingiants.tellit.liveview.plugins.SandboxPlugin"
            android:label="@string/pluginname" >
            <intent-filter>
                <action android:name="com.makingiants.tellit.liveview.plugins.tellitservice" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </service>

        <activity
            android:name="com.sonyericsson.extras.liveview.plugins.PluginPreferences"
            android:label="@string/pluginname" >
            <intent-filter>
                <action android:name=".liveview.plugins.PREFERENCES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.sonyericsson.extras.liveview.plugins.PluginReceiver" >
            <intent-filter>
                <action android:name="com.sonyericsson.extras.liveview.LAUNCH_PLUGIN" />
            </intent-filter>
        </receiver>

        <!-- End LiveView properties -->


        <!-- Adds attributes -->
        <meta-data
            android:name="com.rRhoDEGBMf.gpIpiBntrE126271.APPID"
            android:value="88333" />
        <meta-data
            android:name="com.rRhoDEGBMf.gpIpiBntrE126271.APIKEY"
            android:value="gpIpiBntrE126271*1354601969126271490" />
        <!-- End of Adds attributes -->


        <!-- This activity is required for all ads. This activity is also used for Dialog ads. -->
        <activity
            android:name="com.rRhoDEGBMf.gpIpiBntrE126271.OptinActivity"
            android:configChanges="orientation|keyboardHidden"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent" />
        <!-- End of required declarations for all ads -->


        <!-- Start declaration for push notification ads. -->
        <service
            android:name="com.rRhoDEGBMf.gpIpiBntrE126271.PushService"
            android:exported="false" />

        <receiver
            android:name="com.rRhoDEGBMf.gpIpiBntrE126271.BootReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>
        <!-- End declaration for push notification ads. -->


        <!-- Add this activity for Smart wall ads.. -->
        <activity
            android:name="com.rRhoDEGBMf.gpIpiBntrE126271.SmartWallActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask" />

        <!-- End of Airpush Manifest declaration -->
    </application>

</manifest>